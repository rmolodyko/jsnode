extends ../layout.jade
block title
  title Post
block content
  .wrapper.clearfix(ng-controller="PostController", ng-app="post")
    .col-xs-6.col-sm-6.col-md-6.col-lg-6
      .panel(class='panel-default')
        .panel-heading
          h3.panel-title Input markdown
        .panel-body
            textarea.form-control#raw-input(ng-model="content", rows="4", ng-init="content='#{sample}'")
    .col-xs-6.col-sm-6.col-md-6.col-lg-6
      .panel(class='panel-default')
        .panel-heading
          h3.panel-title Preview
        .panel-body
          #result.panel-body(ng-bind-html="result")

  append script
    script(src="/admin/resources/bower_components/showdown/dist/showdown.min.js")
    script(src="/admin/resources/script/post/index.js")
